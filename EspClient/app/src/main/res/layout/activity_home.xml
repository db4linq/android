<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout style="@style/TitleBar">
        <ImageButton style="@style/TitleBarAction"
            android:contentDescription="@string/description_home"
            android:src="@drawable/title_home"
            android:onClick="onClickHome" />

        <ImageView style="@style/TitleBarSeparator" />
        <TextView style="@style/TitleBarText" />
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="6dip">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button android:id="@+id/home_btn_feature1"
                style="@style/HomeButton"
                android:onClick="onLightFeature"
                android:text="@string/title_feature5"
                android:drawableTop="@drawable/lighting_on"/>
            <Button android:id="@+id/home_btn_feature2"
                style="@style/HomeButton"
                android:onClick="onLightFeature"
                android:text="@string/title_feature6"
                android:drawableTop="@drawable/lighting_off"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            a<Button android:id="@+id/home_btn_feature3"
            style="@style/HomeButton"
            android:onClick="onLightFeature"
            android:text="@string/title_feature5"
            android:drawableTop="@drawable/lighting_on"/>
            <Button android:id="@+id/home_btn_feature4"
                style="@style/HomeButton"
                android:onClick="onLightFeature"
                android:text="@string/title_feature6"
                android:drawableTop="@drawable/lighting_off"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            a<Button android:id="@+id/home_btn_feature5"
            style="@style/HomeButton"
            android:onClick="onLightFeature"
            android:text="@string/title_feature5"
            android:drawableTop="@drawable/lighting_on"/>
            <Button android:id="@+id/home_btn_feature6"
                style="@style/HomeButton"
                android:onClick="onLightFeature"
                android:text="@string/title_feature6"
                android:drawableTop="@drawable/lighting_off"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            a<Button android:id="@+id/home_btn_feature7"
            style="@style/HomeButton"
            android:onClick="onLightFeature"
            android:text="@string/title_feature5"
            android:drawableTop="@drawable/lighting_on"/>
            <Button android:id="@+id/home_btn_feature8"
                style="@style/HomeButton"
                android:onClick="onLightFeature"
                android:text="@string/title_feature6"
                android:drawableTop="@drawable/lighting_off"/>
        </LinearLayout>

</LinearLayout>
</LinearLayout>